#upload-version-modal.modal.fade(role="dialog")
  .modal-dialog: .modal-content
    .modal-body
      //- form.dropzone.dz-clickable#upload-version-dropzone(action="#")
      //- input(type="file", name="file")
      form.form-horizontal
        .form-group.form-group-lg
          label.col-sm-4.control-label(for="upload-form-input-appversion") Version
          .col-sm-8
            input#upload-form-input-appversion.form-control(type="text", placeholder="e.g 1.0.2, 1.0.0-20323, 3.0.1-alpha ...")
        .form-group.form-group-lg
          label.col-sm-4.control-label(for="upload-form-input-file") App File (*.apk, *.ipa)
          .col-sm-8
            input#upload-form-input-file(type="file")

    .modal-footer
      button.btn.btn-sm.btn-default(data-dismiss="modal") Cancel
      button.btn.btn-sm.btn-primary Submit