extends layout

block content
  #the-modal.panel.panel-default(style="max-width: 600px; min-width:320px; margin:0 auto")
    .panel-heading
      h1
        span.glyphicon.glyphicon-lock.pull-right
        if appName
          |Â #{appName} is protected
        else
          | Admin access
          span.glyphicon.glyphicon-wrench.pull-right(style="margin-right:20px")


    .panel-body
      if appName
        p The application store you want to access are <b>securised</b> by password.
      else
        p The admin section is securised by a password, if you don't know it and you should, contact administrator!
      br
      form(method='POST')
        .form-group
          input.form-control.input-lg(type='password', name='token', autofocus, placeholder="Type the password...")
        p
          input.btn.btn-warning.btn-lg(type='submit', value="Login", style="width:100%")
